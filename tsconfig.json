{
  "compilerOptions": {
    "module": "ES6",
    "target": "ES6",
    "moduleResolution": "Node",
    "noImplicitAny": false,
    "sourceMap": true,
    "strict": false,
    "allowJs": false,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
  },
  "include": ["resources/js/**/*.ts", "shims-vue.d.ts"],
  "exclude": ["node_modules", "dist"]
}
